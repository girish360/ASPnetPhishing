@model ASPnetPhishing.Models.Cart

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cart</h2>

<table class="table">
    <tr>
        <th>
            Quantity
        </th>
        <th>
            Image
        </th>
        <th>
            Name
        </th>
        <th>
            Price
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>
    
    @if (Model != null)
    {
        foreach (var item in Model.CartItems)
        {
            <tr>
                <td>
                    @using (Html.BeginForm("Cart", "ProductLists", FormMethod.Get))
                    {
                        @Html.AntiForgeryToken()
                        @Html.TextBox("qty", null, htmlAttributes: new { @class = "form-control", @style = "display:inline-block;" })
                        <input type="submit" value="Update Qty" class="btn btn-default" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ImageFilename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LineTotal)
                </td>
                <td>

                </td>
            </tr>
        }
    }
</table>
@if (Model != null)
{
    <div class="container">
        <div class="col-md-6">
            &nbsp;
        </div>
        <div class="col-md-3">
            <strong>@Html.DisplayNameFor(model => model.Subtotal)</strong>
            <br />
            <strong>@Html.DisplayNameFor(model => model.TaxAmount)</strong>
            <br />
            <strong>@Html.DisplayNameFor(model => model.Total)</strong>
        </div>
        <div class="col-md-3">
            <strong>@Html.DisplayFor(model => model.Subtotal)</strong>
            <br />
            <strong>@Html.DisplayFor(model => model.TaxAmount)</strong>
            <br />
            <strong>@Html.DisplayFor(model => model.Total)</strong>
        </div>
    </div>
}