@model IEnumerable<ASPnetPhishing.Models.ProductCategory>

@{
    ViewBag.Title = "Select Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<figure style="display:inline-block;">
    <a href="@Url.Action("ProductList", "ProductLists", new { id = -1 })">
        <img src="~/Images/all.png" style="width:200px;height:200px;display:inline-block;margin:30px;" class="btn btn-default" />
    </a>
    <figcaption style="text-align:center;">Show All</figcaption>
</figure>


@foreach (var item in Model)
{
    //@Html.ActionLink(item.CategoryName, "ProductList", new { id = item.Id}, htmlAttributes: new { @class = "btn btn-default", @style = "width:200px;height:200px;display:inline-block;margin:30px;"})
    <figure style="display:inline-block;">
        <a href="@Url.Action("ProductList", "ProductLists", new { id = item.Id})">
            <img src="@Url.Content("~/Images/" + item.Id.ToString() + ".png")" style="width:200px;height:200px;display:inline-block;margin:30px;" class="btn btn-default" />
        </a>
        <figcaption style="text-align:center;">@item.CategoryName</figcaption>
    </figure>

}