@model IEnumerable<ASPnetPhishing.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Details", "ProductLists", new { id = item.Id })" >
                <img src="~/Images/@Url.Content(item.ImageFilename)" alt="" height="50" width="50" />
            </a>
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Add To Cart", "Cart", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success" })
        </td>
    </tr>
}

</table>
