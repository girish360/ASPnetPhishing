@model IEnumerable<ASPnetPhishing.Models.AspNetUser>

@{
    ViewBag.Title = "SelectUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Select a User</h2>

<hr style="border-top: 2px solid black;" />

@using (Html.BeginForm("SelectUser", "CardRecords", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container form-horizontal">
        <div class="col-md-3">
            @Html.Label(" Search by Email", new { @class = "control-label" })
        </div>
        <div class="col-md-9">
            @Html.TextBox("userEmail", "", new { @class = "form-control", @style = "display: inline-block;" })
            <input type="submit" value="Search" class="btn btn-success" />
            @Html.ActionLink("<<   Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
        </div>
    </div>
}

<hr style="border-top: 2px solid black;" />

<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Username
        </th>
        <th></th>
    </tr>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Select", "Create", new { customerId = item.Id }, htmlAttributes: new { @class = "btn btn-success" })
            </td>
        </tr>
    }
}
</table>
