@model IEnumerable<ASPnetPhishing.Models.CardRecord>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Card Records</h2>

<hr style="border-top: 2px solid black;" />

<p>
    @Html.ActionLink("Create New", "SelectUser", null, htmlAttributes: new { @class = "btn btn-warning"})
</p>
<table class="table">
    <tr>
        <th>
            Card Number
        </th>
        <th>
            Customer
        </th>
        <th>
            Billing Address
        </th>
        <th>
            City
        </th>
        <th>
            State
        </th>
        <th>
            Zip
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CardNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingZip)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-warning"}) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-default"})
        </td>
    </tr>
}

</table>
