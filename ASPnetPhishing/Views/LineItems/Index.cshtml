@model IEnumerable<ASPnetPhishing.Models.LineItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Customer
        </th>
        <th>
            Price
        </th>
        <th>
            Qty
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Invoice.AspNetUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LineTotal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LineItemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LineItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LineItemId })
        </td>
    </tr>
}

</table>
