<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:#323732;margin:0px;padding-bottom:0px;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Product", "Index", "ProductLists")</li>
                    <li>@Html.ActionLink("Permit", "Index", "Permit")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content" style="background-color:#E6EDE6;min-height:700px;margin-bottom:0px;">
        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
            @Html.Partial("_ManagerNav")
        }

        @RenderBody()
        <hr style="border-top: 2px solid black;"/>
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <footer class="modal-footer navbar-inverse" style="text-align:center;margin:0px;">
        <p style="color:antiquewhite;">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    
</body>
</html>
