@model IEnumerable<ASPnetPhishing.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Questions</h2>

<hr style="border-top: 2px solid black;" />

<hr style="border-top: 2px solid black;" />
<table class="table">
    <tr>
        <th>
            Customer
        </th>
        <th>
            Question
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question1)
        </td>
        <td>
            @Html.ActionLink("Answer", "Answer", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-success" })
        </td>
    </tr>
}

</table>
